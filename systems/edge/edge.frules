#include "/systems/common.frules"


edgeRoll = ([2d6], ((baseline,throws)->
  (sum(
       (
        (first (throws)).rolls
       )
      )
  )
))

characterTable = ruleset
{
  'Main trait' = table
  {
    tableLayout = layout
    {
      columns = 1
      rowTitle = hidden
    }

    'Name' = string
    {
      multiline = ( 1 == 1 )
    }
    Score = integer
    { 
      default = 0 
      valuedice =  edgeRoll
    }
  }
  
  'Side trait' = table
  {
    tableLayout = layout
    {
      columns = 1
      rowTitle = hidden
    }

    'Name' = string
    {
      multiline = ( 1 == 1 )
    }
    Score = integer
    { 
      default = 0 
      valuedice =  edgeRoll
    }
  }
  
  'Trouble' = table
  {
    tableLayout = layout
    {
      columns = 1
      rowTitle = hidden
    }

      'Name' = string
      {
        multiline = ( 1 == 1 )
      }
  }


  Basics = table
  {
    Fight = integer 
    { 
      default=0 
      valuedice = edgeRoll
    }
    Sway = integer 
    { 
      default=0
      valuedice=edgeRoll
    }
    Weird = integer 
    { 
      default=0
      valuedice=edgeRoll
    }
    Strikes = slots
    { 
      number = 3
      allowedchange = increaseAndClear
    }
  }
}



boolToVisible (flag)=
  (if flag
    then visible
   else 
      none)


edge = system


{
    characters = characterTable
    creatures = characterTable
    description="Over The Edge"
    secondaryTypes = []
    quickdice =[2d6, 1d6]
}

